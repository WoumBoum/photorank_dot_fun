# Core auth/JWT
SECRET_KEY=replace_with_random_secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database (local default)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/fastapi_test

# Frontend base URL
FRONTEND_URL=http://localhost:9001

# OAuth providers (placeholders)
GITHUB_CLIENT_ID=replace_me
GITHUB_CLIENT_SECRET=replace_me
GOOGLE_CLIENT_ID=replace_me
GOOGLE_CLIENT_SECRET=replace_me

# Moderator (for admin actions)
MODERATOR_PROVIDER=google
MODERATOR_PROVIDER_ID=replace_me

# Cloudflare Turnstile (optional locally)
CF_TURNSTILE_SITE_KEY=replace_me
CF_TURNSTILE_SECRET_KEY=replace_me

# Cloudflare R2 (optional locally; required for uploads)
R2_ACCESS_KEY_ID=replace_me
R2_SECRET_ACCESS_KEY=replace_me
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your-public-bucket-id.r2.dev
R2_BUCKET_NAME=photorank-uploads

# Analytics/moderation helpers (optional)
ALT_USER_IDS=1,2,3
